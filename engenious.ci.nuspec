<?xml version="1.0" encoding="utf-8"?>
<package>
    <metadata>
        <id>engenious</id>
        <version>$version</version>
        <title>engenious</title>
        <authors>jvbsl</authors>
        <projectUrl>https://github.com/jvbsl/engenious</projectUrl>
        <requireLicenseAcceptance>false</requireLicenseAcceptance>
        <description>3D Engine similar structure to XNA</description>
    </metadata>

    <files>
        <!-- Lib -->
        <file src="engenious\bin\Release\engenious.dll" target="lib\net40" />
        <file src="engenious/bin/Release/engenious.dll" target="lib/net40" />

        <!-- LibContent -->
        <file src="engenious\bin\Release\*" exclude="*.pdb;*.mdb;\engenious.dll" target="additional\net40" />
        <file src="engenious/bin/Release/*" exclude="*.pdb;*.mdb;/engenious.dll" target="additional\net40" />

        <!-- ContentTool -->
        <file src="ContentTool\bin\Release\*" exclude="**\*.pdb;**\*.mdb"  target="tools\net40" />
        <file src="ContentTool/bin/Release/*" exclude="**/*.pdb;**/*.mdb"  target="tools/net40" />
        <file src="ContentTool\bin\Release\x64\*" exclude="**\*.pdb;**\*.mdb"  target="tools\net40\x64" />
        <file src="ContentTool/bin/Release/x64/*" exclude="**/*.pdb;**/*.mdb"  target="tools/net40/x64" />
        <file src="ContentTool\bin\Release\x86\*" exclude="**\*.pdb;**\*.mdb"  target="tools\net40\x86" />
        <file src="ContentTool/bin/Release/x86/*" exclude="**/*.pdb;**/*.mdb"  target="tools/net40/x86" />
        <!-- Targets -->
        <file src="engenious.targets" target="build" />
    </files>
</package>
